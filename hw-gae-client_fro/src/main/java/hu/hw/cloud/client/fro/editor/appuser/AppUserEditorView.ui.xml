<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:combobox="urn:import:gwt.material.design.addins.client.combobox"
	xmlns:ma="urn:import:gwt.material.design.addins.client">

	<ui:with field="i18nCore"
		type="hu.hw.cloud.client.core.i18n.CoreMessages" />

	<ui:style>
	.pp {
		padding-top: 20px;
		margin-left: 10px;
		margin-right: 10px;
	}
	</ui:style>

	<g:HTMLPanel addStyleNames="{style.pp}">

		<m:MaterialRow>
			<m:MaterialNavBar ui:field="navBar" width="100%">
				<m:MaterialBreadcrumb text="Home" />
				<m:MaterialBreadcrumb text="Users" />
				<m:MaterialBreadcrumb text="Editor" />
			</m:MaterialNavBar>
		</m:MaterialRow>

		<m:MaterialRow>
			<m:MaterialColumn grid="s12 m6 l4">
				<m:MaterialImage ui:field="image" caption="Photo"
					activates="photoDrop" width="150px" height="150px"/>
				<!-- My Drop Down -->
				<m:MaterialDropDown activator="photoDrop"
					constrainWidth="true">
					<m:MaterialLink ui:field="directorLink"
						text="Director" />
					<m:MaterialLink ui:field="financeLink"
						text="Finance" />
					<m:MaterialLink ui:field="salesLink" text="Sales" />
					<m:MaterialLink ui:field="fomLink" text="FOM" />
					<m:MaterialLink ui:field="recLink"
						text="Receptionist" />
					<m:MaterialLink ui:field="fandbLink" text="F and B" />
					<m:MaterialLink ui:field="eHousekeeperLink"
						text="Executive HK" />
					<m:MaterialLink ui:field="housekeeper1Link"
						text="Housekeeper1" />
					<m:MaterialLink ui:field="housekeeper2Link"
						text="Housekeeper2" />
					<m:MaterialLink ui:field="maintenanceLink"
						text="Maintenance" />
				</m:MaterialDropDown>

				<m:MaterialTextBox ui:field="name" type="TEXT"
					label="{i18nCore.userEditorName}" />

				<m:MaterialTextBox ui:field="title" type="TEXT"
					label="Beosztás" />

				<m:MaterialTextBox ui:field="emailAddress"
					type="TEXT" label="{i18nCore.userEditorEmail}" />
			</m:MaterialColumn>

			<m:MaterialColumn grid="s12 m6 l4">
				<m:MaterialTextBox ui:field="code" type="TEXT"
					label="{i18nCore.userEditorCode}" />

				<m:MaterialTextBox ui:field="username" type="TEXT"
					label="{i18nCore.userEditorUsername}" />

				<m:MaterialCheckBox ui:field="enabled"
					text="Enabled" />

				<m:MaterialCheckBox ui:field="admin" text="Admin" />

				<combobox:MaterialComboBox
					ui:field="hotelDtos" label="Elérhető hotelek" />

				<combobox:MaterialComboBox
					ui:field="defHotelsDto" label="Alapértelmezett hotel" />

				<combobox:MaterialComboBox
					ui:field="userGroupDtos" label="Chat csoportok" />
			</m:MaterialColumn>

			<m:MaterialColumn grid="s12 m12 l4">
				<ma:richeditor.MaterialRichEditor
					placeholder="Megjegyzések" />
			</m:MaterialColumn>
		</m:MaterialRow>

		<m:MaterialFAB ui:field="fab">
			<m:MaterialAnchorButton type="FLOATING"
				iconType="MORE_VERT" size="LARGE" backgroundColor="GREY" />
			<m:MaterialFABList>
				<m:MaterialAnchorButton ui:field="saveButton"
					type="FLOATING" waves="LIGHT" backgroundColor="GREEN"
					iconType="SAVE" />
				<m:MaterialAnchorButton
					ui:field="cancelButton" type="FLOATING" waves="LIGHT"
					backgroundColor="RED" iconType="CANCEL" />
			</m:MaterialFABList>
		</m:MaterialFAB>
	</g:HTMLPanel>
</ui:UiBinder> 