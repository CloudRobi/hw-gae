<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui">

	<ui:style>
	.mainPanel {
		padding-top: 20px;
		margin-left: 10px;
		margin-right: 10px;
	}
	
	.mobileSelectPanel {
		padding-left: 10px;
		padding-right: 10px;
		padding-bottom: 10px;
	}
	
	.collection {
		margin-top: 0px;
	}
	</ui:style>

	<ui:with field="i18n" type="hu.hw.cloud.client.fro.i18n.FroMessages" />

	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<!-- MOBILE SELECTOR -->
		<m:MaterialPanel hideOn="HIDE_ON_LARGE" showOn="SHOW_ON_MED_DOWN"
			addStyleNames="{style.mobileSelectPanel}">
			<m:MaterialButton text="{i18n.systemConfigMobileSelect}"
				iconType="ARROW_DROP_DOWN" iconPosition="RIGHT" textColor="WHITE"
				activates="dp-2" width="100%" />
			<!-- My Drop Down -->
			<m:MaterialDropDown ui:field="mobileDropDown"
				activator="dp-2" constrainWidth="true" />
		</m:MaterialPanel>

		<m:MaterialRow>
			<m:MaterialColumn grid="l3">
				<m:MaterialPanel hideOn="HIDE_ON_MED_DOWN" showOn="SHOW_ON_LARGE">

					<m:MaterialCollection ui:field="desktopMenu"
						addStyleNames="{style.collection}" />
				</m:MaterialPanel>
			</m:MaterialColumn>

			<m:MaterialColumn ui:field="tablePanel" grid="s12 m12 l9">

			</m:MaterialColumn>
		</m:MaterialRow>

		<m:MaterialFAB depth="995">
			<m:MaterialButton ui:field="addButton" type="FLOATING"
				backgroundColor="RED" iconType="ADD" size="LARGE" />
		</m:MaterialFAB>

	</g:HTMLPanel>
</ui:UiBinder> 