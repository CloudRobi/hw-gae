<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui">
	<ui:style>
	.mainPanel {
		padding-top: 20px;
		margin-left: 10px;
		margin-right: 10px;
	}
	
	.mobileSelectPanel {
		padding-left: 10px;
		padding-right: 10px;
		padding-bottom: 10px;
	}
	
	.collection {
		margin-top: 0px;
	}
	
	.collectionLabel {
		margin-top: 5px;
	}
	
	.collectionSecItem {
		margin-bottom: 10px;
	}
	</ui:style>

	<g:HTMLPanel addStyleNames="{style.mainPanel}">
		<m:MaterialPanel hideOn="HIDE_ON_LARGE" showOn="SHOW_ON_MED_DOWN"
			addStyleNames="{style.mobileSelectPanel}">
			<m:MaterialButton text="Choose data" iconType="ARROW_DROP_DOWN"
				iconPosition="RIGHT" textColor="WHITE" activates="dp-2" width="100%" />
			<!-- My Drop Down -->
			<m:MaterialDropDown activator="dp-2"
				constrainWidth="true">
				<m:MaterialLink text="First" />
				<m:MaterialLink text="Second" />
				<m:MaterialLink text="Third" />
			</m:MaterialDropDown>
		</m:MaterialPanel>
		<m:MaterialRow>
			<m:MaterialColumn grid="l3">
				<m:MaterialPanel hideOn="HIDE_ON_MED_DOWN" showOn="SHOW_ON_LARGE">

					<m:MaterialCollection active="1"
						addStyleNames="{style.collection}">

						<m:MaterialCollectionItem ui:field="usersItem"
							waves="DEFAULT">
							<m:MaterialLabel text="Users" addStyleNames="{style.collectionLabel}" />
							<m:MaterialCollectionSecondary
								addStyleNames="{style.collectionSecItem}">
								<m:MaterialIcon iconType="KEYBOARD_ARROW_RIGHT"
									iconPosition="RIGHT" waves="DEFAULT" />
							</m:MaterialCollectionSecondary>
						</m:MaterialCollectionItem>

						<m:MaterialCollectionItem waves="DEFAULT">
							<m:MaterialLabel text="Wifi" addStyleNames="{style.collectionLabel}" />
							<m:MaterialCollectionSecondary
								addStyleNames="{style.collectionSecItem}">
								<m:MaterialIcon iconType="KEYBOARD_ARROW_RIGHT"
									iconPosition="RIGHT" waves="DEFAULT" />
							</m:MaterialCollectionSecondary>
						</m:MaterialCollectionItem>
					</m:MaterialCollection>
				</m:MaterialPanel>
			</m:MaterialColumn>

			<m:MaterialColumn ui:field="contentPanel" grid="s12 m12 l9">

			</m:MaterialColumn>
		</m:MaterialRow>

		<m:MaterialFAB depth="995">
			<m:MaterialButton ui:field="addButton" type="FLOATING"
				backgroundColor="RED" iconType="ADD" size="LARGE" />
		</m:MaterialFAB>

		<g:SimplePanel ui:field="userEditPanel" />

	</g:HTMLPanel>
</ui:UiBinder> 