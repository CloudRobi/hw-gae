<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:combobox="urn:import:gwt.material.design.addins.client.combobox">

	<ui:style>
	.title {
		margin-top: -60px;
		margin-bottom: 30px;
	}
	
	.actionButton {
		float: right;
	}
	</ui:style>

	<ui:with field="i18n0" type="hu.hw.cloud.client.core.i18n.CoreMessages" />

	<g:HTMLPanel>
		<m:MaterialModal ui:field="modal" type="DEFAULT"
			inDuration="500" outDuration="500">
			<m:MaterialModalContent>
				<m:MaterialTitle title="Globális szűrő"
					addStyleNames="{style.title}" />

				<m:MaterialRow>
					<m:MaterialColumn grid="s12 m6 l4" offset="m3 l4">
						<m:MaterialCard>
							<m:MaterialCardContent>
								<m:MaterialRow ui:field="fieldRow">
									<m:MaterialTextBox ui:field="title" label="Title"
										text="Some Title Here" grid="s12" />
									<m:MaterialTextBox ui:field="image" label="Image"
										grid="s12"
										text="https://3.bp.blogspot.com/-u5JcZlIY0wY/WOZuCA7IBoI/AAAAAAAACh8/eXf8Hb7mtTYMBzDdgSSSeiYTe1fJ4O3owCLcB/s1600/image00.png" />
									<m:MaterialTextArea ui:field="description"
										label="Description" grid="s12" text="Some Description Here" />
								</m:MaterialRow>
							</m:MaterialCardContent>
							<m:MaterialCardAction padding="0">
								<m:MaterialButton ui:field="notifyAllUser"
									text="Notify all subscribed user" textColor="BLUE" iconType="CHECK"
									type="FLAT" waves="DEFAULT" />
							</m:MaterialCardAction>
						</m:MaterialCard>
					</m:MaterialColumn>
					
				</m:MaterialRow>

			</m:MaterialModalContent>

			<m:MaterialModalFooter>
				<m:MaterialButton ui:field="okButton" text="{i18n0.comOk}"
					type="FLAT" waves="DEFAULT" textColor="WHITE" backgroundColor="LIGHT_BLUE"
					addStyleNames="{style.actionButton}" />

				<m:MaterialButton ui:field="cancelButton" text="{i18n0.comCancel}"
					type="FLAT" waves="DEFAULT" addStyleNames="{style.actionButton}" />
			</m:MaterialModalFooter>
		</m:MaterialModal>
	</g:HTMLPanel>
</ui:UiBinder> 