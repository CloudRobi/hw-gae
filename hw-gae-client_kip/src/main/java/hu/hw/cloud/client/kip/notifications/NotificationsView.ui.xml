<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:ma="urn:import:gwt.material.design.addins.client">

	<m:MaterialRow paddingTop="120">
		<m:MaterialColumn grid="s12 m6 l4" offset="m3 l4">
			<m:MaterialCard ui:field="offlineCard" visible="false">
				<m:MaterialCardContent>
					<m:MaterialRow>
						<m:MaterialColumn grid="s4">
							<m:MaterialIcon iconType="CLOUD_OFF" iconColor="BLUE_LIGHTEN_3"
								iconSize="MEDIUM" />
						</m:MaterialColumn>
						<m:MaterialColumn grid="s8">
							<m:MaterialLabel text="No Internet" fontSize="1.2em"
								fontWeight="BOLD" />
							<m:MaterialLabel
								text="Your network is unavailable. Check your data on Wi-Fi connection."
								textColor="GREY" fontSize="0.8em" />
						</m:MaterialColumn>
					</m:MaterialRow>
				</m:MaterialCardContent>
				<m:MaterialCardAction padding="0">
					<m:MaterialButton text="Retry" textColor="GREY"
						iconType="REFRESH" type="FLAT" waves="DEFAULT" />
				</m:MaterialCardAction>
			</m:MaterialCard>

			<m:MaterialPanel ui:field="onlinePanel" textAlign="CENTER">
				<m:MaterialIcon marginTop="40" textColor="BLUE_DARKEN_1"
					iconType="POLYMER" iconSize="LARGE" />
				<m:MaterialLabel text="GMD + PWA" textColor="BLUE"
					fontSize="2em" />
				<m:MaterialLabel text="Start building now your gwt-material apps."
					textColor="BLUE" fontSize="0.8em" />
				<m:MaterialButton text="Install App" waves="DEFAULT"
					ui:field="install" iconType="FILE_DOWNLOAD" backgroundColor="BLUE"
					marginTop="20" />
			</m:MaterialPanel>

			<m:MaterialRow textAlign="CENTER" marginTop="40"
				borderTop="1px solid #e9e9e9" paddingTop="20">
				<m:MaterialLabel ui:field="clientIdLabel"/>
				<m:MaterialLabel text="Enable Push Notication" />
				<m:MaterialSwitch ui:field="enablePushNotification"
					onLabel="Enable" offLabel="Disable" />
				<m:MaterialLabel ui:field="tokenLabel"/>
			</m:MaterialRow>
		</m:MaterialColumn>

		<ma:overlay.MaterialOverlay ui:field="overlay"
			textColor="WHITE" backgroundColor="BLUE">
			<m:MaterialRow>
				<m:MaterialColumn grid="s10 m4 l4" offset="s1 m4 l4"
					paddingTop="120" layoutPosition="RELATIVE">
					<m:MaterialImage url="https://i.imgur.com/XxZZQei.png"
						layoutPosition="ABSOLUTE" top="44" right="0" />
					<m:MaterialLabel fontSize="1.4em" marginBottom="8"
						fontWeight="BOLD" text="Add GMD to Homescreen" />
					<m:MaterialLabel fontSize="1.2em"
						text="Tap to brink your browser menu and select Add to homescreen to pin the GMD Web App" />
					<m:MaterialButton ui:field="gotIt" waves="DEFAULT"
						marginTop="12" textColor="BLACK" backgroundColor="WHITE" text="Got It!" />
				</m:MaterialColumn>
			</m:MaterialRow>
		</ma:overlay.MaterialOverlay>

		<m:MaterialFAB>
			<m:MaterialButton ui:field="btnAdd" iconType="ADD"
				waves="DEFAULT" type="FLOATING" size="LARGE" backgroundColor="PINK" />
		</m:MaterialFAB>

		<g:SimplePanel ui:field="modalSlot" />
	</m:MaterialRow>
</ui:UiBinder>
